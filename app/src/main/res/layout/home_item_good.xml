<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_relation_object_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="#B5A642" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_relation_object_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾初木瓜花果酒单只礼盒装"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_relation_object_jingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_relation_object_title"
                android:layout_marginTop="15dp"
                android:text="每一瓶都由4-5斤云南鲜木瓜酿制3个月而成"
                android:textColor="#CDCDCD"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_item_price"
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_roundrect"
                android:gravity="center"
                android:textColor="#B5A642"
                android:textSize="15sp"
                android:text="¥148.00"/>

            <Button
                android:id="@+id/btu_item_collect"
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/tv_item_price"
                android:drawableLeft="@mipmap/ic_collect_nor"
                android:background="@drawable/shape_roundrect"
                android:gravity="center"
                android:textColor="#B5A642"
                android:textSize="15sp"
                android:text="收藏"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>