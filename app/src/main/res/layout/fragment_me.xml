<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fanwen.yuefoodhome.fragment.MeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_me_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_me_headPic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:src="@mipmap/ic_not_logged" />

                    <TextView
                        android:id="@+id/tv_me_toLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:text="立即登录"
                        android:clickable="true"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_me_myOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#545454"
                        android:text="我的订单"
                        android:layout_centerVertical="true"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_me_rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/ic_right_arrow" />

                    <TextView
                        android:id="@+id/tv_me_checkAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/iv_me_rightArrow"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:textSize="15sp"
                        android:textColor="#CDCDCD"
                        android:text="查看全部"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CDCDCD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_me_payment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_pending_payment"
                        android:text="待付款"/>

                    <TextView
                        android:id="@+id/tv_me_delivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_pending_delivery"
                        android:text="待发货"/>

                    <TextView
                        android:id="@+id/tv_me_receiving"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_pending_receiving"
                        android:text="待收货"/>

                    <TextView
                        android:id="@+id/tv_me_evaluate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_pending_evaluate"
                        android:text="待评价"/>

                    <TextView
                        android:id="@+id/tv_me_refund"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_refund"
                        android:text="退货"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_me_myAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:layout_marginTop="25dp"
                    android:text="我的账户"
                    android:layout_centerVertical="true"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#CDCDCD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- 余额 -->
                        <TextView
                            android:id="@+id/tv_me_balance"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#D98719"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="-"/>

                        <!-- 代金券 -->
                        <TextView
                            android:id="@+id/tv_me_voucher"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#D98719"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="-"/>

                        <!-- 积分 -->
                        <TextView
                            android:id="@+id/tv_me_integral"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#D98719"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="-"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_me_yue"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="余额"/>

                        <TextView
                            android:id="@+id/tv_me_daijinquan"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="代金券"/>

                        <TextView
                            android:id="@+id/tv_me_jifen"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="积分"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#CDCDCD"/>

                <RelativeLayout
                    android:id="@+id/rl_me_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_buy_myCollect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textColor="#545454"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:text="我的收藏"/>

                    <ImageView
                        android:id="@+id/iv_me_rightArrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_right_arrow"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="#CDCDCD"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_me_myActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textColor="#545454"
                        android:textSize="18sp"
                        android:text="我的活动"/>

                    <ImageView
                        android:id="@+id/iv_me_rightArrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_right_arrow"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="#CDCDCD"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_me_inviteFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textColor="#545454"
                        android:textSize="18sp"
                        android:text="邀请好友"/>

                    <ImageView
                        android:id="@+id/iv_me_rightArrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_right_arrow"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="#CDCDCD"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
